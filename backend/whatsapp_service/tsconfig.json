{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"lib": ["es6", "ESNext"],
		"allowJs": true,
		"outDir": "build",
		"rootDir": "./",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true
	},
}
